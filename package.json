{
  "name": "projecrm",
  "version": "1.0.0",
  "description": "Modern bir CRM (Müşteri İlişkileri Yönetimi) sistemi. React, Node.js, PostgreSQL ve TypeScript kullanılarak geliştirilmiştir.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "concurrently -n \"BACKEND,FRONTEND\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "build": "npx tsc -p backend/tsconfig.json && cd frontend && npm run build",
    "clean": "cd backend && rmdir /s /q node_modules dist 2>nul & cd ../frontend && rmdir /s /q node_modules dist 2>nul & rmdir /s /q node_modules 2>nul",
    "test:api": "powershell -ExecutionPolicy Bypass -File ./test-api.ps1"
  },
  "keywords": [
    "crm",
    "typescript",
    "react",
    "nodejs",
    "postgresql",
    "material-ui",
    "socket.io",
    "real-time"
  ],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/salih12s/projecrm/issues"
  },
  "homepage": "https://github.com/salih12s/projecrm#readme",
  "dependencies": {
    "dotenv": "^16.3.1",
    "typescript": "^5.3.2",
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.10.9",
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "socket.io": "^4.6.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@hello-pangea/dnd": "^18.0.1",
    "@mui/icons-material": "^5.14.18",
    "@mui/material": "^5.14.18",
    "@pdf-lib/fontkit": "^1.1.1",
    "axios": "^1.6.2",
    "jspdf": "^3.0.3",
    "jspdf-autotable": "^5.0.2",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "socket.io-client": "^4.6.2",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
